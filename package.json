{
  "name": "hackernews",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "eslint": "5.12.0",
    "eslint-plugin-react": "^7.12.4",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.8",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.5.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "set \"CI=false\" && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "stylelint": "stylelint '**/*.css'; exit 0",
    "reactlint": "eslint '**/*.jsx'; exit 0",
    "eslint": "eslint 'src/*.js'; exit 0",
    "validate": "npm-run-all --parallel stylelint eslint",
    "precommit": "npm run validate",
    "prepush": "npm run validate"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "eslint": "5.12.0",
    "husky": "^1.3.1",
    "npm-run-all": "^4.0.0",
    "react-test-renderer": "^16.8.4"
  }
}
